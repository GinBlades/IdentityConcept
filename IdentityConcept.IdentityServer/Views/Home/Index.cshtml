@model HomeVM

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-sm">
        <h1>This is the home page of the Identity Server.</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm">
        <a asp-action="SignIn" asp-controller="Home" class="btn btn-primary">Sign In</a>
        <a asp-action="Register" asp-controller="Home" class="btn btn-success">Register</a>

    </div>
</div>
<div class="row">
    <div class="col-sm">
        <h2>Users</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Password</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Password</td>
                        <td>@user.UserName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm">
        <h2>Logins</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var login in Model.Logins)
                {
                    <tr>
                        <td>@login.Id</td>
                        <td>@login.Email</td>
                        <td>@login.LoginTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>